        <Label x:Name="titulo_lb" Content="Label" HorizontalAlignment="Center" Margin="0,32,0,0" VerticalAlignment="Top"/>
        <Label x:Name="n_lb" Content="numero" HorizontalAlignment="Left" Margin="50,49,0,0" VerticalAlignment="Top"/>
        <Label x:Name="tipo_lb" Content="tipo" HorizontalAlignment="Left" Margin="50,95,0,0" VerticalAlignment="Top"/>
        <Label x:Name="preco_lb" Content="preço" HorizontalAlignment="Left" Margin="50,142,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
